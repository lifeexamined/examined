<span class="k">import</span> <span class="p">{</span> <span class="nx">RTCMessagingAgent</span> <span class="p">}</span> <span class="k">from</span> <span class="dl">"</span><span class="s2">./rtc-messaging-agent</span><span class="dl">"</span><span class="p">;</span>

<span class="kd">const</span> <span class="nx">configuration</span> <span class="o">=</span> <span class="p">{</span>
  <span class="na">iceServers</span><span class="p">:</span> <span class="p">[</span>
    <span class="p">{</span>
      <span class="na">urls</span><span class="p">:</span> <span class="p">[</span>
